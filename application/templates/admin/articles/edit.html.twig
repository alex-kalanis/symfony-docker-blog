{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}
        
{% block body %}
    <h1 class="text-center">{{ page_title }}</h1>
    <div class="container">
        {{ form.renderStart|raw }}
        {{ form.getControl('title').renderLabel|raw }} {{ form.getControl('title').renderInput|raw }} {{ form.renderControlErrors('title')|raw }}<br />
        <span id="text_edit_content">{{ form.getControl('content').renderInput|raw }}</span><br />
        {{ form.renderControlErrors('content')|raw }}<br />
        {{ form.getControl('submit').renderInput|raw }} {{ form.renderControlErrors('submit')|raw }}<br />
        {{ form.renderEnd|raw }}
    </div>
{% endblock %}
<script type="text/javascript">
	window.addEventListener('load', previewWindow.initialize, false);
	document.body.addEventListener('keyup', previewWindow.tick, false);
</script>
